package main

import (
    "log"
    "net/http"
    "github.com/gin-gonic/gin"
)

func main() {
    router := gin.Default()

    // User routes
    router.POST("/api/users", createUser)
    router.POST("/api/users/login", loginUser)

    // Article routes
    router.POST("/api/articles", createArticle)
    router.GET("/api/articles/:id", getArticle)
    router.PUT("/api/articles/:id", updateArticle)
    router.DELETE("/api/articles/:id", deleteArticle)
    router.POST("/api/articles/:id/favorite", favoriteArticle)
    router.DELETE("/api/articles/:id/favorite", unfavoriteArticle)

    // Start the server
    if err := router.Run(":8080"); err != nil {
        log.Fatal(err)
    }
}

